# Configuración para CARDIONET
# Copia este archivo a .env y ajusta los valores

# OBLIGATORIO en producción: genera con: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=GENERA_UNA_CLAVE_SEGURA_DE_64_CARACTERES_HEX

# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cardionet_db
DB_USER=postgres
DB_PASSWORD=TU_CONTRASEÑA_SEGURA

# Flask
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=5000

# CORS - Orígenes permitidos (separados por coma)
# Con Nginx Proxy Manager (puerto 3010): https://tu-subdominio.com
# Desarrollo: http://localhost:3010,http://localhost:5173
CORS_ORIGINS=http://localhost:3010,http://127.0.0.1:3010,http://localhost:5173
